@model AspFiles.Models.SchoolViewModels.UsuarioVM

@{
    ViewData["Title"] = "Login";
}
<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-5">
            <div class="card shadow-lg rounded-lg">
                <div class="card-header"><h3 class="text-center font-weight-light my-4">Iniciar Sesión</h3></div>
                <div class="card-body">
                    <form asp-action="Login">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label class="small mb-1">Usuario</label>
                            <input class="form-control" type="text" asp-for="NombreUsuario" placeholder="Ingrese su usuario" />
                            <span asp-validation-for="NombreUsuario" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label class="small mb-1" for="inputPassword">Contraseña</label>
                            <input class="form-control" type="password" asp-for="Password" placeholder="Ingrese su contraseña" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <!--
                        <div class="form-group">
                            <div class="custom-control custom-checkbox">
                                <input class="custom-control-input" id="rememberPasswordCheck" type="checkbox" />
                                <label class="custom-control-label" for="rememberPasswordCheck">Recordar mi contraseña</label>
                            </div>
                        </div>-->
                        <div class="form-group d-flex align-items-center justify-content-between mt-4 mb-0">
                            <a class="small" href="#">Olvidé mi contraseña</a>
                            <input type="submit" class="btn btn-primary" value="Entrar" />
                        </div>
                    </form>
                </div>
                <div class="card-footer text-center">
                    <div class="small"><a href="#">¿Nececitas una cuenta?</a></div>
                </div>
            </div>
        </div>
    </div>
</div>



